# Habilitar CORS para todo o site
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "https://www.saasia.com.br"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, X-API-Token"
</IfModule>

# Configuração de log de erros PHP
php_flag display_errors Off
php_value error_log /home/usuario/logs/php-error.log

# Lidar com requisições OPTIONS
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>
